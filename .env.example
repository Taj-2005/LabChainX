# LabChain Next.js Application Environment Variables

# MongoDB Connection
# Local: mongodb://localhost:27017/labchain
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/labchain?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/labchain

# NextAuth.js Configuration
# Generate a secure random string (min 32 characters)
# You can use: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-key-min-32-characters-here
NEXTAUTH_URL=http://localhost:3000

# Socket.IO Server URL
# Local development: http://localhost:3001
# Production: https://your-socket-server.herokuapp.com
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001

# ML Server URL
# Local development: http://localhost:8000
# Production: https://your-ml-server.herokuapp.com
NEXT_PUBLIC_ML_SERVER_URL=http://localhost:8000
